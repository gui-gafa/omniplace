<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Value</th>
      <th>Taker</th>
      <th>Provider</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.date %></td>
        <td><%= loan.value %></td>
        <td><%= loan.taker.name %></td>
        <td><%= loan.provider.name %></td>
        <td><%= loan.description %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loan', new_loan_path %>
