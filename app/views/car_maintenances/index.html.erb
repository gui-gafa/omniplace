<p id="notice"><%= notice %></p>

<h1>Car Maintenances</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Description</th>
      <th>Date</th>
      <th>Warranty</th>
      <th>Car</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_maintenances.each do |car_maintenance| %>
      <tr>
        <td><%= car_maintenance.value %></td>
        <td><%= car_maintenance.description %></td>
        <td><%= car_maintenance.date %></td>
        <td><%= car_maintenance.warranty %></td>
        <td><%= car_maintenance.car.name %></td>
        <td><%= link_to 'Show', car_maintenance %></td>
        <td><%= link_to 'Edit', edit_car_maintenance_path(car_maintenance) %></td>
        <td><%= link_to 'Destroy', car_maintenance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

